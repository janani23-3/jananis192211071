<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgc"
    android:gravity="center">

    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which of the following habits below\nmost troubles you?"
        android:textColor="#000000"
        android:layout_marginStart="-20dp"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(You can choose multiple options also)"
        android:textColor="#666666"
        android:textSize="16sp"
        android:layout_marginBottom="50dp" />
    <Button
        android:id="@+id/option1"
        android:layout_width="288dp"
        android:layout_height="48dp"
        android:backgroundTint="#B9A598"
        android:text="Procrastinating in the morning"
        android:textColor="#640E0E"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        tools:ignore="DuplicateIds" />
    <Button
        android:id="@+id/option2"
        android:layout_width="288dp"
        android:layout_height="55dp"
        android:backgroundTint="#B9A598"
        android:text="Spending too much time on your phone"
        android:textColor="#640E0E"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/option3"
        android:layout_width="288dp"
        android:layout_height="48dp"
        android:backgroundTint="#B9A598"
        android:text="Starting the day feeling rushed"
        android:textColor="#640E0E"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/option4"
        android:layout_width="288dp"
        android:layout_height="48dp"
        android:backgroundTint="#B9A598"
        android:text="Inconsistent sleep schedule"
        android:textColor="#640E0E"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/option5"
        android:layout_width="288dp"
        android:layout_height="48dp"
        android:backgroundTint="#B9A598"
        android:text="Lack of exercise in the morning"
        android:textColor="#640E0E"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/option6"
        android:layout_width="288dp"
        android:layout_height="48dp"
        android:backgroundTint="#B9A598"
        android:text="Difficulty focusing after waking up"
        android:textColor="#640E0E"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/option7"
        android:layout_width="288dp"
        android:layout_height="55dp"
        android:backgroundTint="#B9A598"
        android:text="Not planning or organizing the day ahead"
        android:textColor="#640E0E"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:layout_marginTop="50dp"
        android:text="NEXT"
        android:backgroundTint="#3B2C22"
        android:textColor="#FFF" />
</LinearLayout>
