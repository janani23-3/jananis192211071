<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgc">

    <!-- Profile Title -->
    <TextView
        android:id="@+id/profileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="24sp"
        android:layout_marginBottom="30dp"
        android:textColor="#000000"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold" />

    <!-- Profile Icon -->
    <ImageView
        android:id="@+id/profile_Icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profileicon"
        android:foregroundGravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profileTitle"
        android:layout_marginTop="20dp" />

    <!-- Profile Name -->
    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S Janani"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginBottom="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_Icon"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <!-- Gender Label -->
    <TextView
        android:id="@+id/genderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textSize="16sp"
        android:textColor="#A1171C"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profileName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

    <!-- Gender Value -->
    <TextView
        android:id="@+id/genderValue"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/genderLabel"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/backgndm"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="Female"
        android:textSize="16sp"
        android:textColor="#000000" />

    <!-- Age Label -->
    <TextView
        android:id="@+id/ageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textSize="16sp"
        android:textColor="#A1171C"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/genderValue"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

    <!-- Age Value -->
    <TextView
        android:id="@+id/ageValue"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/ageLabel"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20sp"
        android:background="@drawable/backgndm"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="20"
        android:textSize="16sp"
        android:textColor="#000000" />


    <!-- Edit Button -->
    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:backgroundTint="#3B2C22"
        android:layout_below="@id/ageValue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:backgroundTint="#0000"
        android:layout_below="@id/editButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="#D9C2A6"
        android:layout_alignParentBottom="true">

        <!-- Plan Icon -->
        <ImageView
            android:id="@+id/clockk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/clockk"
            android:contentDescription="Plan Icon"
            android:padding="8dp" />

        <!-- Idea Icon -->
        <ImageView
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/search"
            android:contentDescription="Idea Icon"
            android:padding="8dp" />

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/profileicon"
            android:contentDescription="Profile Icon"
            android:padding="8dp" />
    </LinearLayout>

</RelativeLayout>
