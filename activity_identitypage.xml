<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/radioGroupGender"
    android:gravity="center"
    android:background="@drawable/bgc"
    android:padding="16dp">

    <!-- Main Question Text -->

    <!-- Subtext -->
    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:text="How do you identify\nyourself?"
        android:textColor="#2D1708"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="At times, weâ€™ll provide gender-specific\nrecommendations"
        android:layout_marginRight="50dp"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_marginBottom="25dp" />

    <!-- Male Button -->
    <Button
        android:id="@+id/button_male"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:text="Male"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="#640E0E"
        android:backgroundTint="#B9A598"
        android:layout_marginBottom="10dp" />

    <!-- Female Button -->
    <Button
        android:id="@+id/button_female"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:text="Female"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="#640E0E"
        android:backgroundTint="#B9A598"
        android:layout_marginBottom="10dp" />

    <!-- Others Button -->
    <Button
        android:id="@+id/button_others"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:text="Others"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="#640E0E"
        android:backgroundTint="#B9A598"
        android:layout_marginBottom="10dp"/>
    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:layout_marginTop="50dp"
        android:text="SAVE"
        android:backgroundTint="#3B2C22"
        android:textColor="#FFF" />

</LinearLayout>
