<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#968048"
    android:gravity="center"
    android:padding="16dp">

    <!-- "Get Inspired" text -->
<TextView
android:id="@+id/tvTitle"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="GET INSPIRED"
    android:layout_marginTop="60dp"
android:textColor="#000000"
android:textSize="24sp"
android:layout_marginBottom="20dp"
android:fontFamily="sans-serif-medium" />

    <!-- "Find a routine that works for you" text -->
<TextView
android:id="@+id/tvSubtitle"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Find a routine that works for you"
android:textColor="#640E0E"
android:textSize="20sp"
android:layout_marginBottom="16dp"
android:fontFamily="sans-serif" />

    <!-- Image placeholder -->
<ImageView
android:id="@+id/ivSunflower"
android:layout_width="300dp"
android:layout_height="300dp"
    android:layout_marginTop="50dp"
android:src="@drawable/inspire"
    android:contentDescription="Sunflower illustration" />
    </LinearLayout>
