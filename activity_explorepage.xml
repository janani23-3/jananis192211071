<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgc">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:padding="12dp"
        android:background="@drawable/backgnd10"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:backgroundTint="#BBA785">



        <TextView
            android:id="@+id/titleExplore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:padding="4dp"/>
    </LinearLayout>

    <!-- Recommended Tasks Title -->
    <TextView
        android:id="@+id/titleTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommended tasks"
        android:textSize="18sp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="30dp"
        android:textColor="#640E0E"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>


    <!-- Tasks List Section -->
    <LinearLayout
        android:id="@+id/tasksList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/headerSection"
        android:layout_above="@id/bottomNavigation"
        android:layout_weight="1"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan for just one day"
            android:layout_marginStart="50dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check the weather forecast"
            android:layout_marginStart="50dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reflect on what you're grateful for"
            android:layout_marginStart="50dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set your intentions for the day"
            android:layout_marginStart="50dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan and prep your meals for the day ahead"
            android:layout_marginStart="50dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send a thoughtful text or email to check in"
            android:layout_marginStart="50dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relax and observe nature around you"
            android:layout_marginStart="50dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let your thoughts flow freely on paper"
            android:layout_marginStart="50dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spend time watering or caring for plants"
            android:layout_marginStart="50dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="#D9C2A6"
        android:layout_alignParentBottom="true">

        <!-- Plan Icon -->
        <ImageView
            android:id="@+id/clockk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/clockk"
            android:contentDescription="Plan Icon"
            android:padding="8dp"/>

        <!-- Idea Icon -->
        <ImageView
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/search"
            android:contentDescription="Idea Icon"
            android:padding="8dp"/>

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/profileicon"
            android:contentDescription="Profile Icon"
            android:padding="8dp"/>
    </LinearLayout>

</RelativeLayout>
