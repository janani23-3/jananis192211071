<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgc"
    android:gravity="center">

    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How much sleep do you usually get\nat night"
        android:layout_marginRight="10dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginBottom="60dp"/>
    <Button
        android:id="@+id/option1"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:backgroundTint="#B9A598"
        android:text="7 hours or less"
        android:textColor="#640E0E"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/option2"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:backgroundTint="#B9A598"
        android:text="7-9 hours"
        android:textColor="#640E0E"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/option3"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:backgroundTint="#B9A598"
        android:text="9-12 hours"
        android:textColor="#640E0E"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/option4"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:backgroundTint="#B9A598"
        android:text="12 hours or more"
        android:textColor="#640E0E"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>
</LinearLayout>
