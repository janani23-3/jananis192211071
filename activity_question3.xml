<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgc"
    android:gravity="center">

    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whatâ€™s the first thing you do after\nwaking up?"
        android:textColor="#000000"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:layout_marginBottom="80dp"/>
    <Button
        android:id="@+id/option1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:backgroundTint="#B9A598"
        android:text="Check your phone"
        android:textColor="#640E0E"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/option2"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:backgroundTint="#B9A598"
        android:text="Drink water or tea or coffee"
        android:textColor="#640E0E"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/option3"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:backgroundTint="#B9A598"
        android:text="Morning walk or exercise"
        android:textColor="#640E0E"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/option4"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:backgroundTint="#B9A598"
        android:text="Hit the snooze button \nand go back to sleep"
        android:textColor="#640E0E"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>
</LinearLayout>
